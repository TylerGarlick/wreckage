{
  "name": "wrecked",
  "version": "1.0.0",
  "description": "Utilities and helpers for Hapi's Wreck library",
  "main": "./dist",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "test": "ava",
    "prepublish": "npm run build",
    "build": "npm run build:clean; npm run build:compile",
    "build:compile": "babel src -s inline -d dist",
    "build:clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TylerGarlick/wrecked.git"
  },
  "keywords": [
    "Wreck",
    "Request",
    "HTTP",
    "POST",
    "GET",
    "PUT",
    "DELETE",
    "PATCH"
  ],
  "author": "Tyler Garlick <tjgarlick@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TylerGarlick/wrecked/issues"
  },
  "homepage": "https://github.com/TylerGarlick/wrecked#readme",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.4.0",
    "boom": "^4.3.0",
    "wreck": "^10.0.0"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^7.2.0",
    "babel-preset-pundits": "^2.0.3",
    "babel-register": "^6.9.0",
    "eslint-config-leisurelink": "^1.0.2",
    "nock": "^9.0.9"
  },
  "ava": {
    "require": [ "babel-polyfill", "babel-register" ],
    "babel": "inherit",
    "failFast": true
  }
}
